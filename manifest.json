{
  "manifest_version": 2,

  "name": "Hacker News",
  "version": "2.62",
  "description": "Displays recent stories from Hacker News",
  
  "icons": {
    "48": "icon48.gif",
	  "128": "icon128.gif"
  },
  
  "background": {
    "scripts": ["json2.js", "core.js", "background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "Hacker News",
    "default_icon": "icon18.gif",
    "default_popup": "popup.html"
  },
	
	"options_page":"options.html",
  "permissions": [
    "tabs",
    "storage",
    "http://news.ycombinator.com/*",
    "notifications"
  ]
}
